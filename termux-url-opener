	1)

	echo "$command 140" > ~/.config/youtube-dl/config #option 1

	youtube-dl $1

	;;

	2)

	echo "$command \"best[height<=360]\"" > ~/.config/youtube-dl/config #option 2

	youtube-dl $1

	;;

	3)

	echo "$command \"best[height<=480]\"" > ~/.config/youtube-dl/config #option 3

